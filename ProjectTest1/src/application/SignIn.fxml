   <center>
      <AnchorPane centerShape="false" prefHeight="300.0" prefWidth="500.0" styleClass="shape-background2" stylesheets="@application.css" BorderPane.alignment="CENTER">
         <children>
            <Button layoutX="357.0" layoutY="140.0" mnemonicParsing="false" onAction="#CreateAccount" prefHeight="28.0" prefWidth="122.0" styleClass="button3" text="Create account" textFill="#d5853f">
               <font>
                  <Font name="Bauhaus 93" size="14.0" />
               </font></Button>
            <Label alignment="TOP_LEFT" contentDisplay="CENTER" layoutX="151.0" layoutY="53.0" text="Sign in!!" textFill="#2c9c6a">
               <font>
                  <Font name="Arial Rounded MT Bold" size="50.0" />
               </font></Label>
            <Button layoutX="218.0" layoutY="208.0" mnemonicParsing="false" onAction="#SignIn" prefHeight="28.0" prefWidth="61.0" styleClass="button2" text="Sign In" textFill="#d5853f">
